<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Farmer | Registeation</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="public/static/css/montserrat-font.css">
	<link rel="stylesheet" type="text/css" href="public/static/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
	<!-- Main Style Css -->
    <link rel="stylesheet" href="public/static/css/style.css"/>
    <link rel="stylesheet" href="public/static/css/webcam.css"/>
	<link rel="icon" href="faviconmain.png" type="favicon.png"/>

	<script type="text/javascript" src="webcam.js"></script>
	<script>    
		var i = 1;
 
 function addFarm() {
   i++;
   var div = document.createElement('class');
   var id = i;
   div.innerHTML ='<input type="text" placeholder="Farm location ' + id + '"/>' + ' <input type="button" id="add_farm()_' + id +  ' <input type="button" id="rem_farm()_' + id + '" onclick="remfarm(this)" value="-" />';
   document.getElementById('farms').appendChild(div);
 }
 
 function remfarm(div) {
   document.getElementById('farms').removeChild(div.parentNode);
   i--;
 }
 
	 </script>
	
</head>
<body class="form-v10">
	<div class="page-content">
		<div class="form-v10-content">
			<form class="form-detail" action="#" method="post" id="myform">
				<div class="form-left">
					<h2>Farmer Registration</h2>

					<div class="form-group" id="camBox" style="width:100%;height:100%;">
						<!--POPUP DIALOG BOX TO SHOW LIVE WEBCAM.-->
						<div id="revdivshowimg" style="top:20%;text-align:center;margin:0 auto;">
				
							<div id="camera" style="height:auto;text-align:center;margin:0 auto;"></div>
				
							<div class="form-group">
								<div class="form-row form-row-1">
									<input type="button" value="Ok" id="btAddPicture" onclick="addCamPicture()" />
								</div>
								<div class="form-row form-row-4">
									<input type="button" value="Cancel" onclick="document.getElementById('camBox').style.display = 'none';" />
								</div>
							</div>
								<input type="hidden" id="rowid" />
								<input type="hidden" id="dataurl" />
						</div>
					</div>
				
					<div class="form-group">
						<div class="form-row form-row-1" id="div_alpha"><img src="300.png" alt="pass picture" width="250" height="250"></div>
						<div class="form-row form-row-4"><input type="button" value="Take Picture" id="alpha" onclick="takeSnapshot(this)" /></div>
					</div>
					<div class="form-row">
						<input type="text" name="full_Name" class="full_Name" id="Full Name" placeholder="Full Name" required>
					</div>
					<div class="form-group">
						<div class="form-row form-row-1">
							<input type="number" name="age" class="age" id="age" placeholder="Age" required>
						</div>
						<div class="form-row form-row-4">
							<select name="Gender">
							    <option value="Gender">Gender</option>
							    <option value="Male">Male</option>
							    <option value="Female">Female</option>
							</select>
							<span class="select-btn">
							  	<i class="zmdi zmdi-chevron-down"></i>
							</span>
						</div>
					</div>
					<div class="form-row">
						<input type="text" name="community" class="community" id="community" placeholder="Community" required>
					</div>
					<div class="form-row">
						<input type="text" name="region" class="region" id="region" placeholder="Region" required>
					</div>
					<div class="form-row">
						<select name="Household">
						    <option class="option" value="household">Household Status</option>
						    <option class="option" value="household_status">Household Status Head</option>
						    <option class="option" value="household_status_support">Household Status Support</option>
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-row">
						<input type="number" name="dependents" class="dependents" id="dependents" placeholder="Number of dependents" required>
					</div>
					<div class="form-row">
						<select name="marital Status">
						    <option class="option" value="Marital Status">Marital Status</option>
						    <option class="option" value="Married">Married</option>
						    <option class="option" value="Single">Single</option>
						    <option class="option" value="Divorce">Divorce</option>
						    <option class="option" value="Widow">Widow</option>
						    <option class="option" value="Widower">Widower</option>
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-row">
						<select name="employment status">
						    <option value="employment status">Employment Status</option>
						    <option value="farming">Farming</option>
						    <option value="artisan">Artisan</option>
						    <option value="others">Others</option>
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-row">
						<select name="educational level">
						    <option class="option" value="educational level">Educational Level</option>
						    <option class="option" value="primary">Primary</option>
						    <option class="option" value="jhs">JHS</option>
						    <option class="option" value="shs/vocational">SHS/Vocational</option>
						    <option class="option" value="tertiary">Tertiary</option>
						    <option class="option" value="none">None</option>
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
				</div>
				<div class="form-right">
					<br>
					<br>
					<br>
					<br>
					<div class="form-row">
						<input type="number" name="yrs in farming" class="yrs in farming" id="yrs in farming" placeholder="Years in Cocoa farming" required>
					</div>
					<div class="form-row">
						<input type="text" name="source of income" class="source of income" id="source of income" placeholder="Other source of income" required>
					</div>
				
					<div class="form-row">
						<select name="main language">
						    <option value="main_language">Main speaking Language</option>
						    <option value="twi">Twi</option>
						    <option value="english">English</option>
						    <option value="others">Others</option>
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-row">
						<input type="number" name="no. of farms" class="no. of farms" id="no. of farms" placeholder="Number of farms" required>
					</div>
					<div  class="form-row" id="farms">
						<input type="text" name="farm_1" id="farm_input" placeholder="Farm location">
						<input type="button" id="addfarm" onclick="addFarm()" value="+" />
					  </div>			
					<div class="form-row">
						<select name="trainee status">
						    <option value="trainee status">Trainee Status</option>
						    <option value="owner">Owner</option>
						    <option value="worker">Worker</option>
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-row">
						<select name="level of training">
						    <option value="Level of training">Level of training</option>
						    <option value="1st">1st</option>
						    <option value="2nd">2nd</option>
						    <option value="none">None</option>
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-row">
						<input type="number" name="phone no." id="phone no." class="input-text" required pattern="{2,6}" placeholder="Phone No.">
					</div>
					<div class="form-row">
						<input type="number" name="momo no." id="momo no." class="input-text" required pattern="{2,6}" placeholder="MoMo No.">
					</div>
					<div class="form-row">
						<input type="text" name="buying company" id="buying company" class="input-text"  placeholder="Cocoa buying company">
					</div>
					<div class="form-checkbox">
						<label class="container"><p>I do accept the <a href="#" class="text">Terms and Conditions</a> of Contract.</p>
						  	<input type="checkbox" name="checkbox">
						  	<span class="checkmark"></span>
						</label>
					</div>
					<div class="form-row-last">
						<input type="submit" name="register" class="register" value="Register">
					</div>
				</div>
			</form>
		</div>
	</div>
</body>
<script>
	// CAMERA SETTINGS.
	Webcam.set({
		width: 250,
		height: 250,
		image_format: 'jpeg',
		jpeg_quality: 2000
	});
	Webcam.attach('#camera');

	takeSnapshot = function (oButton) {
		document.getElementById('camBox').style.display = 'block';
		document.getElementById('rowid').value = oButton.id
	}

	addCamPicture = function () {
		var rowid = document.getElementById('rowid').value;

		Webcam.snap(function (data_uri) {
			document.getElementById('div_' + rowid).innerHTML = 
				'<img src="' + data_uri + '" id="" width="250px" height="250px" />';
		});

		document.getElementById('rowid').value = '';
		document.getElementById('camBox').style.display = 'none';       // HIDE THE POPUP DIALOG BOX.
	}
</script>
</html>